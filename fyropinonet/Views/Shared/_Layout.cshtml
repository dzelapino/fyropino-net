<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8"/>
    <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
    <title>@ViewData["Title"] - fyropinonet</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css"/>
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css" rel="stylesheet">
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true"/>
    <style>
        html {
            height: 100vh;    
        }
        body {
            background: #071327;
            color: #ffffff;
            min-height: 100vh;
            display: flex;
            flex-direction: column;
        }
        header {
            background-color: rgba(0, 0, 0, 0.8);
        }
        .navbar-brand, .nav-link {
            color: #ffffff !important;
        }
        .nav-link:hover {
            text-decoration: underline;
        }
        footer {
            background-color: rgba(0, 0, 0, 0.8);
            color: #ffffff;
        }
        .container {
            border-radius: 8px;
            padding: 20px;
            box-shadow: 0 4px 15px rgba(0, 0, 0, 0.2);
        }
        .main-wrapper {
            min-height: calc(100vh - 112px);
        }
        .card {
            border: none;
            background-color: rgba(0, 0, 0, 0.4);
        }
        .card h5 {
            font-weight: bold;
        }
        .card p {
            text-wrap: balance;
        }
        .btn-outline-primary {
            transition: all 0.3s ease;
        }
        .btn-outline-primary:hover {
            color: #fff;
            background-color: #2575fc;
            border-color: #2575fc;
        }
    </style>
</head>
<body>
<header>
    <nav class="navbar navbar-expand-lg navbar-dark shadow-sm">
        <div class="container-fluid">
            <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">fyropinonet</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav ms-auto">
                    <li class="nav-item">
                        <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-area="" asp-controller="Contractor" asp-action="Index">Contractors</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-area="" asp-controller="Contractor" asp-action="Add">Add Contractor</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-area="" asp-controller="Task" asp-action="Index">Task List</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-area="" asp-controller="Task" asp-action="Add">Add Task</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-area="" asp-controller="Task" asp-action="Calendar">Calendar</a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>
</header>
<div class="main-wrapper">
    <div class="container bg-gradient my-4">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>
</div>


<footer class="text-center py-3">
    <div>
        <small>&copy; 2024 - fyropinonet - <a asp-area="" asp-controller="Home" asp-action="Privacy" style="color: #ffffff;">Privacy</a></small>
    </div>
</footer>

<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
<script src="~/js/site.js" asp-append-version="true"></script>
@await RenderSectionAsync("Scripts", required: false)
</body>
</html>
