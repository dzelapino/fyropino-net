@model Contractor


<form method="post">

    <div>
        <h1>Edit Contractor</h1>

        <div>
            
            <div>
                <label for="idInput" class="form-label">Id</label>
                <input id="idInput" type="text" class="form-control" asp-for="Id" readonly="readonly"/>
            </div>

            <div>
                <label for="shortNameInput" class="form-label">Short Name</label>
                <input id="shortNameInput" type="text" class="form-control" asp-for="ShortName"/>
            </div>

            <div>
                <label for="fullNameInput" class="form-label">Full Name</label>
                <input id="fullNameInput" type="text" class="form-control" asp-for="FullName"/>
            </div>

            <div>
                <label for="addressInput" class="form-label">Address</label>
                <input id="addressInput" type="text" class="form-control" asp-for="Address"/>
            </div>

            <div>
                <label for="emailInput" class="form-label">Email</label>
                <input id="emailInput" type="text" class="form-control" asp-for="Email"/>
            </div>

            <div>
                <label for="phoneInput" class="form-label">Phone</label>
                <input id="phoneInput" type="text" class="form-control" asp-for="Phone"/>
            </div>

            <div>
                <label for="colorInput" class="form-label">Color</label>
                <input id="colorInput" type="text" class="form-control" asp-for="Color"/>
            </div>

            <div>
                <label for="isActiveInput" class="form-check-label">Is Active</label>
                <input id="isActiveInput" type="checkbox" class="form-check-input" asp-for="IsActive"/>
            </div>

            <div>
                <button type="submit" class="btn btn-primary">Save</button>

                <button type="submit" class="btn btn-danger" asp-action="Delete" asp-controller="Contractor">
                    Delete
                </button>
            </div>
        </div>
    </div>

</form>